{
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "/api/index.py"
        }
    ],
    "functions": {
        "api/index.py": {
            "maxDuration": 10,
            "excludeFiles": "{backend/data/**,frontend/**,node_modules/**,backend/__pycache__/**,*.md,*.toml}"
        }
    }
}